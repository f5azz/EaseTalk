<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".VoiceCallActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:title="@string/title_ai_voice_call"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@android:color/black" />

    <!-- Live call timer -->
    <Chronometer
        android:id="@+id/callTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintBaseline_toBaselineOf="@id/topToolbar"
        app:layout_constraintEnd_toEndOf="@id/topToolbar"
        android:paddingEnd="4dp"
        android:paddingStart="4dp" />

    <!-- Status text -->
    <TextView
        android:id="@+id/tvVoiceStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status_preparing"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/topToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Center progress while connecting -->
    <ProgressBar
        android:id="@+id/progressConnecting"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvVoiceStatus"
        app:layout_constraintBottom_toTopOf="@id/actionsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Bottom action row -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- End Call -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEndCall"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/btn_end_call"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_call_end_24"
            app:iconTint="@android:color/white"
            android:backgroundTint="#E53935"
            app:layout_constraintWidth_percent="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSpeakerToggle"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Speaker Toggle -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSpeakerToggle"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/btn_speaker_on"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_speaker_off_24"
            app:iconTint="@android:color/white"
            android:backgroundTint="#9E9E9E"
            app:layout_constraintWidth_percent="0.48"
            app:layout_constraintStart_toEndOf="@id/btnEndCall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnEndCall"
            android:layout_marginStart="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
